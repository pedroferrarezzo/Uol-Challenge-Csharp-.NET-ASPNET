@model IEnumerable<Desafio_UOL.ViewModel.JogadorExibicaoViewModel>
@if(Model.Count() > 0)
{
    @section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/chart.js"></script>
    }
}

<div class="row">
    <h4>Pie Chart - Codinomes Cadastrados</h4>
</div>
<hr />
<div class="d-flex flex-column">
    <a asp-action="Index" class="btn btn-secondary align-self-start">Voltar</a>

    @if(Model.Count() > 0)
    {
        <div class="divchart align-self-center">
            <canvas id="myChart" class="align-self-center"></canvas>
        </div>


        @foreach (var jogador in Model.DistinctBy(j => j.Codinome.Grupo.Nome))
        {
            <input type="hidden" id="@jogador.Codinome.Grupo.Nome" value="@Model.Where(j => j.Codinome.GrupoId == @jogador.Codinome.GrupoId).Count()" />
        }
    }
</div>

